---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ServiceCard from '../components/ServiceCard.astro';
---

<Layout title="DOA - Digital Optimizer Agency">
	<Header />
	<main>
		<h1>Welcome to DOA</h1>
		<p>We are your digital optimization experts.</p>
		<section>
			<h2>Our Services</h2>
			<div class="services">
				<ServiceCard 
					title="Tagging Solutions" 
					description="Find Media Leaks and SAAS Apps & Experiments with Tag Based Analytics" 
				/>
				<ServiceCard 
					title="PPC/CRO & Growth" 
					description="Best practices for Pay-Per-Click, Conversion Rate Optimization, and Growth" 
				/>
				<ServiceCard 
					title="Data Architecture" 
					description="We establish and manage your tags, events, and software needs across different platforms" 
				/>
			</div>
		</section>
	</main>
	<Footer />
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
	.services {
		display: flex;
		flex-wrap: wrap;
		gap: 2rem;
		justify-content: center;
	}
</style>