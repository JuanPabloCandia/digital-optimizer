<header>
  <nav class="navbar">
    <div class="logo">DOA</div>
    <button class="mobile" aria-label="Toggle Menu">&#9776;</button>
    <ul class="nav-menu">
      <li><a href="/">Home</a></li>
      <li><a href="/about">About Us</a></li>
      <li><a href="/contact">Contact Us</a></li>
    </ul>
  </nav>
</header>

<style>
/* Estilos base */
header {
  width: 80%;
  margin: 0 auto;
}

.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem;
  background-color: #F6F6F6;
  position: relative;
}

.logo {
  font-size: 2rem;
  font-weight: bold;
  color: #333;
}

.nav-menu {
  display: flex;
  list-style: none;
  margin: 0;
  padding: 0;
  justify-content: flex-start; /* Alinear elementos a la izquierda */
}

.nav-menu li {
  margin-right: 1rem;
}

.nav-menu li:last-child {
  margin-right: 0;
}

.nav-menu a {
  text-decoration: none;
  font-size: 1rem;
  color: #FFF;
  background-color: #7c60d5;
  padding: 0.5rem 1rem;
  border-radius: 5px;
  transition: background-color 0.3s ease;
}

.nav-menu a:hover {
  background-color: #5a40a3;
}

/* Botón de mobile */
.mobile {
  display: none;
  background: none;
  border: none;
  font-size: 2rem;
  cursor: pointer;
  color: #333;
}

/* Media query para dispositivos pequeños */
@media (max-width: 768px) {
  .mobile {
    display: block; /* Mostrar el botón de hamburguesa */
  }

  .nav-menu {
    display: none; /* Ocultar menú inicialmente */
    flex-direction: column; /* Cambiar dirección del menú en móvil */
    position: absolute;
    top: 100%; /* Colocar el menú justo debajo del botón */
    right: 0; /* Alineamos el menú a la derecha */
    background-color: rgba(244, 239, 239, 0.9); /* Fondo semitransparente */
    min-width: 150px; /* Ajustar el ancho del cuadro */
    padding: 1.5rem; /* Espaciado interno del cuadro */
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border-radius: 10px; /* Bordes redondeados */
    z-index: 1000;
  }

  .nav-menu li {
    margin: 1rem 0; /* Espaciado entre los botones */
  }

  .nav-menu li:last-child {
    margin-bottom: 0; /* Elimina el margen inferior del último elemento */
  }

  .nav-menu.show {
    display: flex; /* Mostrar menú desplegable */
    align-items: flex-start; /* Alinear los botones a la izquierda */
  }

  .nav-menu a {
    padding: 0.7rem 1rem; /* Ajustar el tamaño interno de los botones */
  }
}
</style>

<script>
  const mobile = document.querySelector('.mobile') as HTMLButtonElement | null;
const navMenu = document.querySelector('.nav-menu') as HTMLUListElement | null;

if (mobile && navMenu) {
  mobile.addEventListener('click', () => {
    navMenu.classList.toggle('show');
  });
}
</script>
</header>
